        "    print(\"ESTADO ATUAL DAS MÁQUINAS:\")\n",
        "    for m in maquinas:\n",
        "        print(\"Nome:\", m[0], \"| Status:\", m[1], \"| Temp:\", m[2], \"| Última:\", m[3])\n",
        "\n",
        "    print(\"-\" * 50)\n",
        "\n",
        "    # Passo B: Testar a função de adicionar manutenção\n",
