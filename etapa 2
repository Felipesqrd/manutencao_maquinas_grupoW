        "def registrar_medicao(linha):\n",
        "    partes = linha.split(\",\")\n",
        "    nome = partes[0].strip()\n",
        "    temperatura = float(partes[1].strip())\n",
        "    status = partes[2].strip()\n",
        "\n",
        "    for m in maquinas:\n",
        "        if m[0] == nome:\n",
        "            m[1] = status\n",
        "            m[2] = temperatura\n",
        "            # desafio: se status for \"em manutenção\", atualizar data\n",
        "            break\n",
        "\n",
        "registrar_medicao(\"Torno CNC, 78.5, operando\")\n",
        "maquinas\n"
